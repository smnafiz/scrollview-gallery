<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="textStart"
            android:textSize="25sp"
            android:textColor="@color/headline"
            android:layout_weight="1"
            android:id="@+id/pageTitle"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="View All"
                android:textAlignment="textEnd"
                android:id="@+id/buttonViewAll"
                />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonVideo1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:foreground="#6F000000"
                    android:clickable="false"
                    android:contentDescription="Video"
                    android:id="@+id/imageVideoOne"
                    />

                <TextView
                    android:id="@+id/video1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brainwave Entrainment"
                    android:textColor="#FFFFFF"
                    android:lines="2"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonVideo2"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:foreground="#6F000000"
                    android:contentDescription="Video"
                    android:id="@+id/imageVideoTwo"
                    android:clickable="false"/>

                <TextView
                    android:id="@+id/video2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brainwave Entrainment"
                    android:textColor="#FFFFFF"
                    android:lines="2"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAudio1"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/audio_player"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:foreground="#6F000000"
                    android:clickable="false"
                    android:contentDescription="Audio" />

                <TextView
                    android:id="@+id/audio1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio"
                    android:textColor="#FFFFFF"
                    android:lines="2"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAudio2"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/audio_player"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:foreground="#6F000000"
                    android:contentDescription="Audio"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/audio2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio"
                    android:textColor="#FFFFFF"
                    android:lines="2"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAudio3"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/audio_player"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:foreground="#6F000000"
                    android:contentDescription="Audio"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/audio3Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio"
                    android:textColor="#FFFFFF"
                    android:lines="2"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    />
            </RelativeLayout>

        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>